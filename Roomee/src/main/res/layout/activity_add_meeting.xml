<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="10sp"
        android:id="@+id/addNewMeetingLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:focusable="true"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layoutSummary"
            android:paddingTop="20sp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="500dp">
            <TextView
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:fontFamily="sans-serif"
                android:textSize="15dp"
                android:text="Meeting Summary" />
            <FrameLayout
                android:layout_weight="1"
                android:layout_height="45sp"
                android:layout_width="match_parent" >
                <EditText
                    android:id="@+id/txtSummary"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:background="@drawable/edit_text_border"
                    android:paddingLeft="10sp"
                    android:hint="Summary"
                    android:maxLines="1" />
                <ImageButton
                    android:id="@+id/btn_clear_summary"
                    android:onClick="emptyEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:visibility="invisible"
                    android:layout_gravity="right|center_vertical"
                    android:background="@drawable/ic_action_empty" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutSummary"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="500dp">
            <TextView
                android:layout_weight="2"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Meeting Description" />

            <FrameLayout
                android:layout_weight="1"
                android:layout_height="105sp"
                android:layout_width="match_parent" >
                <EditText
                    android:id="@+id/txtDesc"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="top"
                    android:maxLength="50"
                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_text_border"
                    android:hint="Description"
                    android:paddingRight="30sp"
                    android:paddingTop="10sp"
                    android:paddingLeft="10sp"
                    android:paddingBottom="10sp"
                    android:maxLines="3"/>
                <ImageButton
                    android:id="@+id/btn_clear_desc"
                    android:onClick="emptyEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="right|top"
                    android:layout_marginTop="5sp"
                    android:visibility="invisible"
                    android:background="@drawable/ic_action_empty" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMeetingStart"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="500dp">
            <TextView
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:text="Meeting Start" />

            <Button
                android:id="@+id/btnStartTime"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:paddingLeft="10sp"
                style="?android:spinnerStyle"
                android:textSize="16sp"
                android:maxLength="50"
                android:maxLines="1"
                android:onClick="showTimePickerDialog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutMeetingStart"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_width="500dp">
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="Meeting End" />

            <Button
                android:id="@+id/btnEndTime"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:paddingLeft="10sp"
                android:layout_width="match_parent"
                android:singleLine="true"
                style="?android:spinnerStyle"
                android:maxLength="50"
                android:maxLines="1"
                android:onClick="showTimePickerDialog" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
