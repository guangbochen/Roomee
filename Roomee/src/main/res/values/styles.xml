<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/thin_ab_style</item>
    </style>

    <style name="AddNewMeetingTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/thick_ab_style</item>
    </style>

    <!-- thin Action bar style  -->
    <style name="thin_ab_style" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/action_bar_bg</item>
        <item name="android:height">40dp</item>
        <item name="android:titleTextStyle">@style/AppBaseTheme.ActionBar.TitleTextStyle</item>
    </style>


    <style name="AppBaseTheme.ActionBar.TitleTextStyle" parent="@android:Theme.Holo.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- thick Action bar style  -->
    <style name="thick_ab_style" parent="android:Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:background">@color/action_bar_bg</item>
        <item name="android:height">45dp</item>
        <item name="android:titleTextStyle">@style/AddNewMeetingTheme.ActionBar.TitleTextStyle</item>
    </style>
    <style name="AddNewMeetingTheme.ActionBar.TitleTextStyle" parent="@android:Theme.Holo.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
